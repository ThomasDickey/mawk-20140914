#! /bin/sh
echo "** postinst script for mawk: $*"

set -e

PRI=50
ALT=mawk
PKG=mawk-cur

BINDIR=/usr/bin
MANDIR=/usr/share/man/man1

if [ $1 != "upgrade" ]
then
	update-alternatives \
		--install \
			$BINDIR/$ALT $ALT \
			$BINDIR/$PKG $PRI \
		--slave $MANDIR/$ALT.1.gz $ALT.1.gz \
			$MANDIR/$PKG.1.gz
fi

#DEBHELPER#

exit 0
